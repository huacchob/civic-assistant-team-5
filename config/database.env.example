# Supabase Database Configuration
# Copy this file to database.env and fill in your actual values

POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_HOST=your_host_here.supabase.co
POSTGRES_PORT=5432

# Full database URL for libraries to use (with SSL required)
DATABASE_URL=postgresql://postgres:your_password_here@your_host_here.supabase.co:5432/postgres?sslmode=require

# Supabase MCP Server Configuration
SUPABASE_ACCESS_TOKEN=your_personal_access_token_here
SUPABASE_PROJECT_REF=your_project_ref_here

# Read-only database user (recommended for MCP server)
# Create this user in Supabase with only SELECT permissions
READONLY_DATABASE_URL=postgresql://readonly_user:readonly_password@your_host_here.supabase.co:5432/postgres?sslmode=require
